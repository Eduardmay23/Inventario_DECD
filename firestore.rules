
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla global simple:
    // Permite acceso completo de lectura y escritura a CUALQUIER colecci칩n 
    // para CUALQUIER usuario que haya iniciado sesi칩n.
    // Esto es apropiado para un panel de administraci칩n interno donde
    // todos los usuarios son de confianza.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    /**
     * @description Permite a los usuarios gestionar su propio perfil.
     * Aunque la regla global ya lo cubre, dejamos esta por claridad.
     * El borrado de usuarios no est치 permitido desde el cliente.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow write: if request.auth.uid == userId;
      allow delete: if false;
    }
  }
}
